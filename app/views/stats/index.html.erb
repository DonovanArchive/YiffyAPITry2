      png:         <%= @stats['png_posts'] %>,
      gif:         <%= @stats['gif_posts'] %>,
      webp:        <%= @stats['webp_posts'] %>,
      webm:        <%= @stats['webm_posts'] %>,

      safe:        <%= @stats['safe_posts'] %>,
      questionable: <%= @stats['questionable_posts'] %>,
